@model LearnAzure.Admin.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}


<div class="container" style="margin-top:50px;">
    <form class="form-horizontal" action="@Url.Action("Index", "Home")" method="post">

        @*Exams*@
        <div class="form-group">
            @Html.LabelFor(m => m.SelectedExamId, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.SelectedExamId, Model.Exams, new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                <input type="submit" class="btn btn-default" style="width: 100px; display: none;" value="None">
                <input type="submit" class="btn btn-default" name="EditExam" style="width: 100px; margin-left: 10px;" value="Edit">
                <input type="submit" class="btn btn-warning" name="Sections" style="width: 100px; margin-left: 10px;" value="Sections">
            </div>
        </div>


        @*Sections*@
        <div class="form-group">
            @Html.LabelFor(m => m.SelectedSectionId, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.SelectedSectionId, Model.Sections, new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                <input type="submit" class="btn btn-default" id="LoadSection" name="LoadSection" style="width: 100px; display: none;" value="Refresh">
                <input type="submit" class="btn btn-default" name="EditSection" style="width: 100px; margin-left: 10px;" value="Edit">
                <input type="submit" class="btn btn-warning" name="Categories" style="width: 100px; margin-left: 10px;" value="Categories">
            </div>
        </div>


        @*Categories*@
        <div class="form-group">
            @Html.LabelFor(m => m.SelectedCategoryId, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.SelectedCategoryId, Model.Categories, new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                <input type="submit" class="btn btn-default" id="LoadCategory" name="LoadCategory" style="width: 100px; display: none;" value="Refresh">
                <input type="submit" class="btn btn-default" name="EditCategory" style="width: 100px; margin-left: 10px;" value="Edit">
                <input type="submit" class="btn btn-warning" name="Topics" style="width: 100px; margin-left: 10px;" value="Topics">
            </div>
        </div>


        @*Topics*@
        <div class="form-group">
            @Html.LabelFor(m => m.SelectedTopicId, new { @class = "col-sm-2 control-label" })

            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.SelectedTopicId, Model.Topics, new { @class = "form-control placeholder-topics" })
            </div>
            <div class="col-sm-5">
                <input type="submit" class="btn btn-default" id="LoadTopic" name="LoadTopic" style="width:100px;display:none;" value="Refresh">
                <input type="submit" class="btn btn-default" name="EditTopic" style="width: 100px; margin-left: 10px;" value="Edit">
                <input type="submit" class="btn btn-warning" name="LearningContent" style="width: 150px; margin-left: 10px;" value="Learning Content">
            </div>
        </div>


        @*Actions*@
        <div class="form-group" style="margin-top:50px;">
            <label class="col-sm-2 control-label">&nbsp;</label>

            <div class="col-sm-7">
                <input type="submit" class="btn btn-success" name="FillQuestions" style="width:150px;" value="Fill Questions">
                <input type="submit" class="btn btn-warning" name="LearningContent" style="width: 200px; margin-left: 10px;" value="Add Learning Content">            
            </div>

            <div class="col-sm-2">
                <input type="submit" class="btn btn-info" name="ExportExam" style="margin-left:10px;width:150px;" value="Export Exam">
            </div>
        </div>
</form>
</div>

@section Scripts
{
    <script>
        $(document).on('change', '#SelectedExamId', function () {
            $("#LoadSection").click();
        });

        $(document).on('change', '#SelectedSectionId', function () {
            $("#LoadCategory").click();
        });

        $(document).on('change', '#SelectedCategoryId', function () {
            $("#LoadTopic").click();
        });

            //$(document).ready(function () {                
            //});
    </script>
}